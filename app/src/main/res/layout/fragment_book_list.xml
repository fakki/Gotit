<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/book_list_SwipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ListView
                android:id="@+id/book_list_ListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </android.support.v4.widget.SwipeRefreshLayout>
    <android.support.design.widget.FloatingActionButton android:id="@+id/book_list_FloatingButton"
                                                        android:layout_gravity="bottom|end"
                                                        android:src="@mipmap/totop"
                                                        android:backgroundTint="@color/colorDeepGrey"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"/>
</FrameLayout>
